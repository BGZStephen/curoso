{
  "name": "curoso",
  "packageManager": "yarn@3.2.2",
  "scripts": {
    "prepare": "npx husky install",
    "prettier": "prettier --write .",
    "eslint": "eslint --fix -c .eslintrc.js ./src/",
    "format": "npm run prettier && npm run eslint",
    "unit-test": "jest --verbose -c jest.unit.config.js",
    "integration-test": "jest --verbose -c jest.integration.config.js",
    "build": "rm -rf dist && node_modules/.bin/tsc --noEmit && npm run prisma:generate && node ./esbuild.js",
    "prisma:generate": "pnpify prisma generate"
  },
  "dependencies": {
    "@prisma/client": "4.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/cuid": "^2.0.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@yarnpkg/pnpify": "^4.0.0-rc.14",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cuid": "^2.1.8",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.18.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4",
    "winston": "^3.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*..ts": [
      "eslint --fix -c .eslintrc.js"
    ],
    "src/**/*.{ts,js,json,yaml,yml,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "prisma": "4.1.1"
  }
}
